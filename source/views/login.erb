 <div id="login-register-container">
    <% if @login == "login" %>
        <h2>Logga in</h2>
        <form method="post" action="/login"> 
            <input type="hidden" name="user-value" value="login">
            <input type="text" name="username" placeholder="Användarnamn" required>
            <input type="password" name="password" placeholder="Lösenord" required>
            <input type="submit" value="Logga in">
        </form>
        <a href="/login/register">Ny användare</a>
    <% elsif @login == "register" %>
        <form method="post" action="/login"> 
            <input type="hidden" name="user-value" value="register">
            <input type="text" name="username" placeholder="Användarnamn" required>
            <input type="password" name="password" placeholder="Lösenord" required>
            <input type="password" name="password-check" placeholder="Upprepa lösenord" required>
            <input type="submit" value="Skapa användare">
        </form>
        <a href="/login/login">Tillbaka</a>
    <%else%>
    <h2>Denna routen finns inte</h2>
    <a href="/login/login">Tillbaka</a>
    <% end %>
</div>